#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#


# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zsh.d/prezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zsh.d/prezto/init.zsh"
fi

# Customize to your needs...

alias git="noglob git"
alias gb="git branch"
alias gd="git diff"
alias gg="git grep"
alias gpr="git pull --rebase"
alias gs="git status"
alias gsu="git submodule update --init --recursive"
alias vi=vim
alias j="fasd_cd -i -1"
export GIT_EDITOR=vim
export EDITOR=vim
export PATH=/usr/local/bin:/bin:/usr/sbin:/sbin:/usr/bin:/usr/local/sbin:/usr/X11/bin:/Users/rotemy/.rvm/bin
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

ulimit -n 1024

if [ -n "$EMACS" ]; then
    export EDITOR=emacsclient
    export VISUAL=emacsclient
    export GIT_EDITOR=emacsclient
fi

source ~/.zsh.d/extras/function_keys.zsh
source ~/.zsh.d/extras/dircycle.zsh

if [[ -e ~/.zsh.site ]]; then
    source ~/.zsh.site
fi

#distinguish remote hosts when SSHed into
if [[ -n "$SSH_CLIENT" ]]; then
  PROMPT="%B%F{magenta}%n@%m%f%b -- $PROMPT"
fi

unsetopt BRACE_CCL # this is annoying for using with git - HEAD@{1} becomes HEAD@1...
